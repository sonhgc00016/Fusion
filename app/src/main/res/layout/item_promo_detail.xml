<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/itemPromotionDetail_llProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemPromotion_llStore"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_color"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100.2">

            <TextView
                android:id="@+id/itemPromotionDetail_tvProduct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:gravity="center_vertical"
                android:padding="@dimen/itemPromotion_rowPadding"
                android:text="@string/product"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/itemPromotion_textSizeTitle" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:background="@color/divider_color"></View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemPromotionDetail_tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/itemPromotion_rowPadding"
                    android:paddingTop="@dimen/itemPromotion_rowPadding"
                    android:text="@string/description"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/itemPromotion_textSizeNormal" />

                <TextView
                    android:id="@+id/itemPromotionDetail_tvDateinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/itemPromotion_rowPadding"
                    android:paddingLeft="@dimen/itemPromotion_rowPadding"
                    android:text="@string/dateinfo"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/itemPromotion_textSizeNormal" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_color"></View>
    </LinearLayout>
</RelativeLayout>